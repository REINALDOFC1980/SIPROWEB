<div class="table-responsive">

    <table class="table table-striped table-hover" style="border-collapse: collapse;">
        <thead>
            <tr>
                <th style="padding: 10px;">Número</th>
                <th style="padding: 10px;">Relator</th>
                <th style="padding: 10px;">Assunto</th>
                <th style="padding: 10px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @{
             if (ViewBag.Protocolo == null)
             {
                 <tr>
                     <td colspan="5"> <i class="fa fa-twitch"></i> Realize sua busca.</td>
                 </tr>
             }
             else if (ViewBag.Protocolo.Count != 0)
             {
                 @foreach (var item in ViewBag.Protocolo)
                 {
                        <tr onclick="handleRowClick('@item.PrtNumero')">

                            <td style="padding: 10px;"><a href="#" class="client-link">@item.PrtNumero</a></td>
                            <td style="padding: 10px;"><a href="#" class="client-link">@item.PrtRelator</a></td>
                            <td style="padding: 10px;"><a href="#" class="client-link">@item.PrtAssunto</a></td>
                            <td style="padding: 10px;"><a href="#" class="btn btn btn-primary"> Visualizar <i class="fa fa-eye"></i>
                             </a>
                         </td>
                     </tr>
                 }
             }
             else if (ViewBag.Protocolo.Count == 0)
             {
                 <tr>
                     <td colspan="5"> <i class="fa fa-twitch"></i> Não foi localizado registro para essa pesquisa.</td>
                 </tr>
             }
             }
        </tbody>
    </table>

   


</div>

