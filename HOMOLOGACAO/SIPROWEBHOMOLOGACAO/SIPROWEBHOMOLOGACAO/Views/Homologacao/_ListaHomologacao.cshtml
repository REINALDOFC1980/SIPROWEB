<div class="table-responsive">

    <table class="table table-striped table-hover" style="border-collapse: collapse;">
        <tbody>
            @{
                if (ViewBag.Protocolo == null)
                {
                    <tr>
                        <td colspan="5"> <i class="fa fa-twitch"></i> Realize sua busca.</td>
                    </tr>
                }
                else if (ViewBag.Protocolo.Count != 0)
                {
                    @foreach (var item in ViewBag.Protocolo)
                    {
                        <tr onclick="handleRowClick('@item.PRT_NUMERO', '@item.PRT_AIT')">
                            <td class="contact-type" style="padding: 10px;"> <i class="fa fa-car"></i></td>
                            <td style="padding: 10px;"><a href="#" class="client-link">@item.PRT_NUMERO</a></td>
                            <td style="padding: 10px;"><a href="#" class="client-link">@item.SETSUB_NOME</a></td>
                            <td style="padding: 10px;"><a href="#" class="client-link">@item.PRT_NOME_ASSUNTO</a></td>
                            <td style="padding: 10px;"><a href="#" class="client-link">@item.PRT_AIT</a></td>
                            <td style="padding: 10px;"><a href="#" class="client-link">@item.PRT_RESULTADO</td>
                            <td style="padding: 10px;"><a href="#" class="client-link"> Visualizar <i class="fa fa-eye"></i>
                                </a>
                            </td>
                        </tr>

                        

                    }
                }
                else if (ViewBag.Protocolo.Count == 0)
                {
                    <tr>
                        <td colspan="5"> <i class="fa fa-twitch"></i> Não foi localizado registro para essa pesquisa.</td>
                    </tr>
                }
            }
        </tbody>
    </table>

   


</div>

<script>
    document.querySelectorAll(".table tr").forEach(td => {
        td.addEventListener("click", function () {
            // Remove borda dos outros <td>
            document.querySelectorAll(".table tr").forEach(el => el.style.border = "none");

            // Adiciona borda no <td> clicado
            this.style.border = "2px solid #dea32f";
        });
    });


    function handleRowClick(prtNumero, prtAit) {
        Notiflix.Loading.Standard('Aguarde...');
        AbrirHomologacao(prtNumero, prtAit);

    }

</script>
