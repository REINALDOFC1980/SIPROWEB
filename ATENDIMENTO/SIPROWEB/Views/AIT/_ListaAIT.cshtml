 @model IEnumerable<SIPROSHARED.Models.ResultGetAitModel>
<div class="table-responsive">

    <table class="table table-striped table-hover">
        
        <thead>
            <tr>
                <th class="text-left">Número AIT</th>
                <th class="text-center">Placa</th>
                <th class="text-left">Infração</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        
        <tbody>

            
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>

                            

                        <td class="text-left">
              
                                <a href="#" class="client-link" onclick="AbirAIT('@item.rec_ait_numero')">@item.rec_ait_numero</a>
                            </td>


                            <td class="text-center">

                            <a href="#" class="client-link"><i class="fa fa-car"> </i> @item.Rec_Veiculo_Placa</a>
                            </td>

                        <td class="text-left">

                                @item.infracaodescricao
                            </td>

                            <td>
                            <a href="#" class="btn btn-primary" id="link-@item.rec_ait_numero" onclick="AbirAIT('@item.rec_ait_numero', this)">
                                     Visualizar
                                </a>
                            </td>
                        </tr>
                    }
                }else  @if (Model == null)
                {

                
                <tr><td colspan="5"> <i class="fa fa-twitch"></i>  Realize sua busca.</td></tr>
                }
                else 
                {
                <tr><td colspan="5"> <i class="fa fa-twitch"></i> Não foi localizado registro para esse pesquisa.</td></tr>
                }
            
        </tbody>
    </table>
</div>