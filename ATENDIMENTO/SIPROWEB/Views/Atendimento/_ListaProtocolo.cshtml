<div class="table-responsive">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-left">Protocolo</th>
                <th class="text-center">Serviço</th>
                <th class="text-center">AIT</th>
                <th class="text-center">Situação</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        
        <tbody>
        @{
            if (ViewBag.Protocolo == null)
            {

                    <tr><td colspan="5"> <i class="fa fa-twitch"></i>  Realize sua busca.</td></tr>
             
            }
            else if (ViewBag.Protocolo.Count != 0)
            {
                @foreach (var item in ViewBag.Protocolo)
                {
                    <tr>
                

                         <td class="text-left">                         
                             <a href="#" class="client-link" onclick="AbirProtocolo('@item.PRT_NUMERO')">@item.PRT_NUMERO</a>
                         </td>

                         <td class="text-center">                    
                             <a href="#" class="client-link">@item.PRT_NOME_ASSUNTO</a>
                         </td>

                         <td class="text-center">                
                             <a href="#" class="client-link">@item.PRT_AIT</a>
                         </td>
         
                         <td class="text-center client-status">         
                             <span class="label @(item.PRT_ACAO == "ARQUIVADO!" ? "label-black-50" : "label-primary")">
                                 @item.PRT_ACAO
                             </span>
                         </td>
                         <td>
                             <a href="#" class="btn btn-primary" id="link-@item.PRT_NUMERO" onclick="AbirProtocolo('@item.PRT_NUMERO', this)">
                                Visualizar
                             </a>
                         </td>
                    </tr>
                }
            }
            else  @if (ViewBag.Protocolo.Count == 0)
            {
                <tr><td colspan="5"> <i class="fa fa-twitch"></i> Não foi localizado registro para esse pesquisa.</td></tr>
              
            }
          
            }
        </tbody>
    </table>
</div>